{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./types",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.collection",
      "es2015.promise",
      "esnext"
    ]
  },
  "include": [
    "src"
  ]
}
